@model IEnumerable<CS305_WebApp.Models.ProgramModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    <p>
        Title: @Html.TextBox("SearchString") <br />
        <input type="submit" value="search" class="tfbutton">
    </p>
}
@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th></th>
                <th>
                    Program
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Website
                </th>
            </tr>
            @foreach (var program in Model)
            {

                <tr class="info">

                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = program.ID }) |
                        <!--, new { onClick = "retrun confirm('Are you sure you want to delete this user: "+ roster.Firstname +""+"');"}-->
                        @Html.ActionLink("Delete", "DoDelete", new { id = program.ID }, new { onclick = "return confirm('Are you sure you want to delete this user: " + program.name + "" + "');" })
                    </td>
                    <td>
                        @program.name
                    </td>
                    <td>
                        @program.address
                    </td>
                    <td>
                        @program.number
                    </td>
                    <td>
                        @program.webpage
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>
                    Program
                </th>
                <th>
                    Address
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Website
                </th>
            </tr>
            @foreach (var program in Model)
            {

                <tr class="info">
                    <td>
                        @program.name
                    </td>
                    <td>
                        @program.address
                    </td>
                    <td>
                        @program.number
                    </td>
                    <td>
                        @program.webpage
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

