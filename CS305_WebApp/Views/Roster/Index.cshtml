@model IEnumerable<CS305_WebApp.Models.RosterModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roster</h2>
<!--var roster = _dbContext.RosterModel.ToList();-->
<p>
    @Html.ActionLink("Add", "Roster", "Home")
</p>
<table class="table table-striped table-hover">
    <tbody>
        <tr>
            <th></th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var roster in Model)
        {

            <tr class="info">

                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = roster.ID }) |
                    <!--, new { onClick = "retrun confirm('Are you sure you want to delete this user: "+ roster.Firstname +""+"');"}-->
                    @Html.ActionLink("Delete", "DoDelete", new { id = roster.ID }, new { onclick = "return confirm('Are you sure you want to delete this user: " + roster.Firstname + "" + "');" })
                </td>
                <td>
                    @roster.Firstname
                </td>
                <td>
                    @roster.Lastname
                </td>
                <td>
                    @roster.description
                </td>
            </tr>
        }
    </tbody>
</table>
@using (Html.BeginForm("ExportToExcel", "Roster", FormMethod.Post))
{
    <input type="submit" value="Export" />
}
